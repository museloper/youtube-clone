extends /layout/base

block content
  form.edit-profile__form(method="POST", enctype="multipart/form-data")
    label(for="avatar") Avatar
    input(type="file", id="avatar", name="avatar", accept="image/*")
    input(type="text", name="email", placeholder="이메일", value=loggedInUser.email required)
    input(type="text", name="username", placeholder="아이디", value=loggedInUser.username required)
    input(type="text", name="name", placeholder="이름", value=loggedInUser.name required)
    input(type="text", name="location", placeholder="지역", value=loggedInUser.location required)
    input(type="submit", value="Update Profile")

    if !loggedInUser.socialOnly
      div.edit-profile__password
        a(href="/users/change-password") Change Password &rarr;