extends /layout/base

block content
  h4 Change Title of Video
  form(method="POST")
    input(type="text", name="title", value=video.title, placeholder="new title", required)
    input(type="text", name="description", value=video.description, placeholder="Description", minlength=20, required)
    input(type="text", name="hashtags", value=video.hashtags.join(),  placeholder="Hashtags, separated by comma.", required)
    input(type="submit", value="Save")