extends /layout/base

block content
  div.upload__container
    div.upload__video
      video#preview
      button#record.social__btn Start Recording

    if errorMessage
      span=errorMessage

    form(method="POST", enctype="multipart/form-data")
      label(for="video") Video File
      input(type="file", id="video", name="video", accept="video/*", required)
      label(for="thumbnail") Thumbnail File
      input(type="file", id="thumbnail", name="thumbnail", accept="image/*", required)
      input(type="text", name="title", placeholder="Title", maxlength=80, required)
      input(type="text", name="description", placeholder="Description", minlength=10, required)
      input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required)
      input(type="submit", value="Upload Video")

block scripts 
  script(src="/assets/js/videoRecorder.js") 