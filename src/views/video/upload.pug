extends /layout/base

block content
  if errorMessage
    span=errorMessage
  form(method="POST" enctype="multipart/form-data")
    label(for="video") Video
    input(type="file", id="video", name="video", accept="video/*", required)
    input(type="text", name="title" placeholder="Title", maxlength=80, required)
    input(type="text", name="description" placeholder="Description", minlength=20, required)
    input(type="text", name="hashtags" placeholder="Hashtags, separated by comma.", required)
    input(type="submit", value="Upload Video")